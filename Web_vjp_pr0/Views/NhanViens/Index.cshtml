@model IEnumerable<Web_vjp_pr0.Models.NhanVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thông Tin Nhân Viên</h2>

<p>
    @Html.ActionLink("Thêm Mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã Nhân Viên
        </th>
        <th>
            Tên Nhân Viên
        </th>
        <th>
            Năm Sinh
        </th>
        <th>
            Giới Tính
        </th>
        <th>
            Số Điện Thoại
        </th>
        <th>
            Địa Chỉ
        </th>
        <th>Thao Tác</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaNhanVien)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenNhanVien)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NamSinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GioiTinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.MaNhanVien }) |
            @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaNhanVien }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.MaNhanVien })
        </td>
    </tr>
}

</table>
